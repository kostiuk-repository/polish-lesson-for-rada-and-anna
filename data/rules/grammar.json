          "formation": "основа + -szy/-iej",
          "examples": [
            {"positive": "dobry", "comparative": "lepszy"},
            {"positive": "duży", "comparative": "większy"},
            {"positive": "ładny", "comparative": "ładniejszy"}
          ]
        },
        "superlative": {
          "formation": "naj- + сравнительная степень",
          "examples": [
            {"positive": "dobry", "superlative": "najlepszy"},
            {"positive": "duży", "superlative": "największy"}
          ]
        }
      }
    },
    
