    "levels": ["A1", "A2", "B1", "B2", "C1", "C2"]
  },
  
  "rules": {
    "verbs": {
      "conjugation": {
        "present_tense": {
          "title": "Настоящее время",
          "level": "A1",
          "description": "Спряжение глаголов в настоящем времени",
          "examples": [
            {
              "verb": "mówić",
              "forms": {
                "ja": "mówię",
                "ty": "mówisz", 
                "on/ona/ono": "mówi",
                "my": "mówimy",
                "wy": "mówicie",
                "oni/one": "mówią"
              }
            }
          ],
          "patterns": {
            "type_1": {
              "ending": "-ę, -isz, -i, -imy, -icie, -ą",
              "examples": ["mówić", "robić", "prosić"]
            },
            "type_2": {
              "ending": "-am, -asz, -a, -amy, -acie, -ają",
              "examples": ["czytać", "słuchać", "grać"]
            }
          }
        },
        "past_tense": {
          "title": "Прошедшее время",
          "level": "A1",
          "description": "Образование прошедшего времени с учетом рода",
          "formation": "основа глагола + -ł/-ła/-ło + окончание",
          "examples": [
            {
              "verb": "być",
              "masculine": ["byłem", "byłeś", "był", "byliśmy", "byliście", "byli"],
              "feminine": ["byłam", "byłaś", "była", "byłyśmy", "byłyście", "były"],
              "neuter": [null, null, "było", null, null, null]
            }
          ]
        },
        "future_tense": {
          "title": "Будущее время",
          "level": "A2",
          "description": "Два способа образования будущего времени",
          "types": {
            "simple_future": {
              "description": "Простое будущее (глаголы совершенного вида)",
              "example": "kupię, kupisz, kupi..."
            },
            "compound_future": {
              "description": "Составное будущее (być + инфинитив или -ł форма)",
              "examples": [
                "będę czytać/czytał",
                "będziesz czytać/czytała"
              ]
            }
          }
        }
      },
      "aspects": {
        "title": "Виды глаголов",
        "level": "A2",
        "description": "Различие между совершенным и несовершенным видом",
        "imperfective": {
          "description": "Несовершенный вид - процесс, повторяющееся действие",
          "examples": [
            {"verb": "czytać", "meaning": "читать (процесс)"},
            {"verb": "pisać", "meaning": "писать (процесс)"}
          ]
        },
        "perfective": {
          "description": "Совершенный вид - завершенное, результативное действие",
          "examples": [
            {"verb": "przeczytać", "meaning": "прочитать (результат)"},
            {"verb": "napisać", "meaning": "написать (результат)"}
          ]
        }
      }
    },
    
