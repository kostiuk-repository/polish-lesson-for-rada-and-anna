          "locative": {
            "title": "Miejscownik (Предложный)",
            "questions": ["o kim?", "o czym?", "gdzie?"],
            "functions": ["Место", "Предмет речи"],
            "examples": [
              {"sentence": "Myślę o domu.", "word": "domu", "case": "loc"},
              {"sentence": "Mieszkam w Warszawie.", "word": "Warszawie", "case": "loc"}
            ]
          },
          "vocative": {
            "title": "Wołacz (Звательный)", 
