            "functions": ["Отрицание", "Количество", "Принадлежность"],
            "examples": [
              {"sentence": "Nie ma czasu.", "word": "czasu", "case": "gen"},
              {"sentence": "Dom mojego brata.", "word": "brata", "case": "gen"}
            ]
          },
          "dative": {
            "title": "Celownik (Дательный)",
            "questions": ["komu?", "czemu?"],
            "function": "Косвенное дополнение",
