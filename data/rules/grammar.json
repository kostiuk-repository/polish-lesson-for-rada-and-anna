    "adjectives": {
      "agreement": {
        "title": "Согласование прилагательных",
        "level": "A1",
        "description": "Прилагательные согласуются в роде, числе и падеже",
        "patterns": {
          "hard_stem": {
            "description": "Твердая основа",
            "masculine": {
              "nom_sg": "dobry",
              "gen_sg": "dobrego",
              "examples": ["dobry dom", "dobrego domu"]
            },
            "feminine": {
              "nom_sg": "dobra", 
              "gen_sg": "dobrej",
              "examples": ["dobra książka", "dobrej książki"]
            },
            "neuter": {
              "nom_sg": "dobre",
              "gen_sg": "dobrego", 
              "examples": ["dobre dziecko", "dobrego dziecka"]
            }
          },
          "soft_stem": {
            "description": "Мягкая основа",
            "examples": ["letni", "zimowy", "czerwony"]
          }
